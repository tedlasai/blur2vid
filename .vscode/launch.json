    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "python",
            "request": "launch",
            "module": "accelerate.commands.launch",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/cogvideox/training",
            "args": [
                "--config_file", "accelerator_train_debug_config.yaml",
                "--multi_gpu",
                "--main_process_port=29504",
                "train_controlnet.py",
                "--config", "/datasets/sai/gencam/cogvideox/training/configs/gopro_train-nosin.yaml"
            ],
            // "env": {"CUDA_LAUNCH_BLOCKING": "1"}
            "env": {
                "PYTHONPATH": "${cwd}",
                "CUDA_VISIBLE_DEVICES": "0"
            }
          },
          {
            "name": "val",
            "type": "python",
            "request": "launch",
            "module": "accelerate.commands.launch",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/training",
            "args": [
                "--config_file", "/datasets/sai/blur2vid/training/accelerator_configs/accelerator_val_config.yaml",
                "--multi_gpu",
                "--main_process_port=29502",
                "train_controlnet.py",
                "--config", "/datasets/sai/blur2vid/training/configs/outsidephotos.yaml"
            ],
            // "env": {"CUDA_LAUNCH_BLOCKING": "1"}
            "env": {
                "PYTHONPATH": "${cwd}",
                "CUDA_VISIBLE_DEVICES": "1"
            }
          },
    ]
}